{
  "name": "backend_chatapp",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.json",
    "typeorm:create": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm -d src/migrations",
    "typeorm:run": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "test:unit": "mocha --opts src/tests/mocha.opts --require ts-node/register src/tests/unit/**/*.spec.ts --exit",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test-coverage": "nyc --reporter=text --check-coverage yarn test:unit",
    "dev": "nodemon --watch src --watch .env"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "helmet": "^3.18.0",
    "http-status": "^1.4.0",
    "mysql": "^2.17.1",
    "nyc": "^14.1.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/http-errors": "^1.6.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "@types/socket.io": "^2.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.4.5"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "exclude": [
      "src/migrations",
      "src/seeds",
      "tests/",
      "ormconfig.ts",
      "src/app.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
